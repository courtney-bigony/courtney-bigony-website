<script>
  const toggle = document.getElementById('mobile-toggle');
  const menu = document.getElementById('mobile-menu');
  toggle?.addEventListener('click', () => menu?.classList.toggle('hidden'));
  document.querySelectorAll('.mobile-link').forEach(link =>
    link.addEventListener('click', () => menu?.classList.add('hidden'))
  );

  const nav = document.getElementById('main-nav');
  const darkSections = document.querySelectorAll('#footer-nature');
  window.addEventListener('scroll', () => {
    const navHeight = nav?.offsetHeight ?? 64;
    let overDark = false;
    darkSections.forEach(section => {
      const rect = section.getBoundingClientRect();
      if (rect.top <= navHeight && rect.bottom > 0) overDark = true;
    });
    const isMobile = window.innerWidth < 768;
    const scrollThreshold = isMobile ? 10 : 50;
    if (window.scrollY <= scrollThreshold || overDark) {
      nav?.classList.remove('bg-white', 'bg-white/90', 'backdrop-blur-md', 'shadow-sm');
    } else if (isMobile) {
      nav?.classList.remove('bg-white/90', 'backdrop-blur-md');
      nav?.classList.add('bg-white', 'shadow-sm');
    } else {
      nav?.classList.add('bg-white/90', 'backdrop-blur-md', 'shadow-sm');
    }
    if (overDark) {
      nav?.classList.add('nav-on-dark');
    } else {
      nav?.classList.remove('nav-on-dark');
    }
  }, { passive: true });

  // YouTube facade: click thumbnail to load iframe
  document.querySelectorAll('.yt-facade').forEach(btn => {
    btn.addEventListener('click', () => {
      const iframe = document.createElement('iframe');
      iframe.src = `https://www.youtube.com/embed/${btn.dataset.id}?autoplay=1`;
      iframe.title = btn.dataset.title || '';
      iframe.className = 'w-full h-full';
      iframe.frameBorder = '0';
      iframe.allow = 'accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture';
      iframe.allowFullscreen = true;
      btn.replaceWith(iframe);
    });
  });
</script>


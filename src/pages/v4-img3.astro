<script is:inline>
  // ═══════════════ GSAP Horizontal Scroll ═══════════════
  gsap.registerPlugin(ScrollTrigger, ScrollToPlugin);

  var track = document.getElementById('h-track');
  var panels = gsap.utils.toArray('.h-panel');
  var progressWrap = document.getElementById('timeline-progress-wrap');
  var progressBar = document.getElementById('timeline-progress');
  var isMobile = window.innerWidth < 768;

  if (!isMobile && track && panels.length > 1) {
    // Prevent iframes from capturing scroll events during scrub
    var iframes = track.querySelectorAll('iframe');
    iframes.forEach(function(iframe) {
      iframe.style.pointerEvents = 'auto';
    });

    var scrollTween = gsap.to(track, {
      x: function() { return -(track.scrollWidth - window.innerWidth); },
      ease: 'none',
      scrollTrigger: {
        trigger: '#work',
        pin: true,
        pinSpacing: true,
        scrub: 2,
        invalidateOnRefresh: true,
        end: function() { return '+=' + (track.scrollWidth - window.innerWidth); },
        snap: {
          snapTo: 1 / (panels.length - 1),
          duration: { min: 0.3, max: 0.8 },
          delay: 0.1,
          ease: 'power2.inOut',
          inertia: false
        },
        onUpdate: function(self) {
          if (progressBar) progressBar.style.width = (self.progress * 100) + '%';
        },
        onEnter: function() {
          if (progressWrap) progressWrap.style.opacity = '1';
        },
        onLeave: function() {
          if (progressWrap) progressWrap.style.opacity = '0';
        },
        onEnterBack: function() {
          if (progressWrap) progressWrap.style.opacity = '1';
        },
        onLeaveBack: function() {
          if (progressWrap) progressWrap.style.opacity = '0';
        }
      }
    });

    // Disable iframe pointer events during scroll to prevent scroll hijacking
    var scrolling = false;
    var scrollTimer;
    window.addEventListener('scroll', function() {
      if (!scrolling) {
        scrolling = true;
        iframes.forEach(function(iframe) { iframe.style.pointerEvents = 'none'; });
      }
      clearTimeout(scrollTimer);
      scrollTimer = setTimeout(function() {
        scrolling = false;
        iframes.forEach(function(iframe) { iframe.style.pointerEvents = 'auto'; });
      }, 150);
    }, { passive: true });

    // Per-panel content reveal animations
    panels.forEach(function(panel) {
      var els = panel.querySelectorAll('.anim-el');
      if (!els.length) return;
      els.forEach(function(el) {
        gsap.from(el, {
          opacity: 0,
          y: 25,
          duration: 0.5,
          scrollTrigger: {
            trigger: el,
            containerAnimation: scrollTween,
            start: 'left 85%',
            end: 'left 55%',
            scrub: true
          }
        });
      });
    });
  }

  // ═══════════════ Nav Scroll Behavior ═══════════════
  var nav = document.getElementById('main-nav');

  function updateNav() {
    if (!nav) return;
    var navHeight = nav.offsetHeight || 64;
    var overDark = false;

    // Check horizontal scroll section
    var pinSpacer = document.querySelector('.pin-spacer');
    if (pinSpacer) {
      var rect = pinSpacer.getBoundingClientRect();
      if (rect.top <= navHeight && rect.bottom > 0) overDark = true;
    } else {
      var workSection = document.querySelector('.horizontal-scroll-section');
      if (workSection) {
        var rect = workSection.getBoundingClientRect();
        if (rect.top <= navHeight && rect.bottom > 0) overDark = true;
      }
    }

    if (window.scrollY <= 50 || overDark) {
      nav.classList.remove('bg-white/90', 'backdrop-blur-md', 'shadow-sm');
    } else {
      nav.classList.add('bg-white/90', 'backdrop-blur-md', 'shadow-sm');
    }
    if (overDark) {
      nav.classList.add('nav-on-dark');
    } else {
      nav.classList.remove('nav-on-dark');
    }
  }

  window.addEventListener('scroll', updateNav, { passive: true });
  updateNav();

  // ═══════════════ Smooth Scroll via GSAP ScrollToPlugin ═══════════════
  document.querySelectorAll('a.nav-link[href^="#"]').forEach(function(link) {
    link.addEventListener('click', function(e) {
      var hash = this.getAttribute('href');
      if (!hash || hash === '#') {
        e.preventDefault();
        gsap.to(window, { scrollTo: 0, duration: 0.8, ease: 'power2.inOut' });
        return;
      }
      var target = document.querySelector(hash);
      if (target) {
        e.preventDefault();
        gsap.to(window, { scrollTo: { y: target, offsetY: 0 }, duration: 0.8, ease: 'power2.inOut' });
        var mobileMenu = document.getElementById('mobile-menu');
        if (mobileMenu) mobileMenu.classList.add('hidden');
      }
    });
  });

  // ═══════════════ Mobile Menu ═══════════════
  var toggle = document.getElementById('mobile-toggle');
  var menu = document.getElementById('mobile-menu');
  if (toggle && menu) {
    toggle.addEventListener('click', function() { menu.classList.toggle('hidden'); });
  }
</script>


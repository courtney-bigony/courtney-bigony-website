<script>
  const toggle = document.getElementById('mobile-toggle');
  const menu = document.getElementById('mobile-menu');
  toggle?.addEventListener('click', () => menu?.classList.toggle('hidden'));
  document.querySelectorAll('.mobile-link').forEach(link =>
    link.addEventListener('click', () => menu?.classList.add('hidden'))
  );

  const nav = document.getElementById('main-nav');
  const darkSections = document.querySelectorAll('#footer-nature');
  window.addEventListener('scroll', () => {
    const navHeight = nav?.offsetHeight ?? 64;
    let overDark = false;
    darkSections.forEach(section => {
      const rect = section.getBoundingClientRect();
      if (rect.top <= navHeight && rect.bottom > 0) overDark = true;
    });
    if (window.scrollY <= 50 || overDark) {
      nav?.classList.remove('bg-white/90', 'backdrop-blur-md', 'shadow-sm');
    } else {
      nav?.classList.add('bg-white/90', 'backdrop-blur-md', 'shadow-sm');
    }
    if (overDark) {
      nav?.classList.add('nav-on-dark');
    } else {
      nav?.classList.remove('nav-on-dark');
    }
  }, { passive: true });
</script>


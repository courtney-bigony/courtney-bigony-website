---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Courtney Bigony — Thriving Expert">

  <!-- ═══════════════════════════════════════════ NAV ═══════════════════════════════════════════ -->
  <nav id="main-nav" class="fixed top-0 left-0 right-0 z-50 transition-[background-color,box-shadow,backdrop-filter] duration-500">
    <div class="max-w-[1400px] mx-auto px-6 md:px-12 flex items-center justify-between h-16">
      <a href="#" class="text-[15px] font-bold tracking-[-0.01em] text-charcoal">COURTNEY BIGONY</a>
      <div class="hidden md:flex items-center gap-8">
        <a href="#about" class="text-[13px] text-secondary hover:text-charcoal transition-colors">About</a>
        <a href="#work" class="text-[13px] text-secondary hover:text-charcoal transition-colors">Work</a>
        <a href="#media" class="text-[13px] text-secondary hover:text-charcoal transition-colors">Media</a>
        <a href="#speaking" class="text-[13px] text-secondary hover:text-charcoal transition-colors">Speaking</a>
        <a href="#contact" class="text-[13px] font-medium text-white bg-charcoal px-4 py-2 rounded-full hover:bg-charcoal/85 transition-colors">Get in Touch</a>
      </div>
      <button id="mobile-toggle" class="md:hidden p-2 -mr-2" aria-label="Toggle menu">
        <svg width="18" height="18" viewBox="0 0 18 18" fill="none" stroke="currentColor" stroke-width="1.5">
          <line x1="1" y1="5" x2="17" y2="5" />
          <line x1="1" y1="13" x2="17" y2="13" />
        </svg>
      </button>
    </div>
    <div id="mobile-menu" class="md:hidden hidden border-t border-border/30 bg-white/95 backdrop-blur-md">
      <div class="px-6 py-6 flex flex-col gap-4">
        <a href="#about" class="text-[15px] text-secondary mobile-link">About</a>
        <a href="#work" class="text-[15px] text-secondary mobile-link">Work</a>
        <a href="#media" class="text-[15px] text-secondary mobile-link">Media</a>
        <a href="#speaking" class="text-[15px] text-secondary mobile-link">Speaking</a>
        <a href="#contact" class="text-[15px] font-medium text-accent mobile-link">Get in Touch</a>
      </div>
    </div>
  </nav>


  <!-- ═══════════════════════════════════════════ HERO (full-bleed) ═══════════════════════════════════════════ -->
  <section class="flex flex-col md:block relative w-full md:min-h-screen bg-white">
    <img
      src="/images/headshots/hero.jpg"
      alt="Courtney Bigony"
      class="w-full h-[55vh] object-cover object-[70%_top] pt-16 md:pt-0 md:absolute md:inset-0 md:h-full md:object-[right_top]"
    />
    <div class="relative z-10 py-12 md:py-0 md:flex md:items-center md:min-h-screen md:pt-16">
      <div class="w-full max-w-[1400px] mx-auto px-6 md:px-12">
        <div class="max-w-[480px]">
          <p class="text-[11px] uppercase tracking-[0.2em] text-accent font-semibold mb-6">Thriving Expert &middot; Tech Advisor &middot; Speaker</p>
          <h1 class="text-[clamp(3rem,6vw,5rem)] font-bold leading-[0.95] tracking-[-0.04em] text-charcoal mb-6">
            COURTNEY<br/>BIGONY
          </h1>
          <p class="text-[17px] leading-relaxed text-secondary max-w-[400px] mb-3">
            I help companies build technology and AI that helps people thrive.
          </p>
          <p class="text-[15px] leading-relaxed text-tertiary max-w-[400px] mb-8">
            Applying positive psychology research to product design, team culture, and AI development.
          </p>
          <div class="flex flex-wrap items-center gap-4">
            <a href="#contact" class="inline-flex items-center gap-2 px-6 py-3 bg-charcoal text-white text-[13px] font-medium rounded-full hover:bg-charcoal/85 transition-colors">
              Work With Me
              <svg width="14" height="14" viewBox="0 0 14 14" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M1 7h12M8 2l5 5-5 5"/></svg>
            </a>
            <a href="#about" class="text-[13px] text-secondary hover:text-charcoal transition-colors font-medium">Learn More</a>
          </div>
        </div>
      </div>
    </div>
    <!-- Scroll indicator -->
    <div class="hidden md:flex absolute bottom-8 left-1/2 -translate-x-1/2 z-10 flex-col items-center gap-2 animate-bounce">
      <span class="text-[10px] uppercase tracking-[0.2em] text-tertiary">Scroll</span>
      <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="1.5" class="text-tertiary"><path d="M4 6l4 4 4-4"/></svg>
    </div>
  </section>

  <!-- Featured In -->
  <div class="border-b border-border/40">
    <div class="max-w-[1400px] mx-auto px-6 md:px-12 py-14 md:py-18 flex flex-wrap items-center justify-center gap-10 md:gap-16">
      <span class="text-[11px] uppercase tracking-[0.15em] text-tertiary font-medium">Featured in</span>
      <img src="/images/logos/forbes.png" alt="Forbes" style="height: 16px; width: auto;" class="opacity-30 grayscale" />
      <img src="/images/logos/fastcompany.png" alt="Fast Company" style="height: 16px; width: auto;" class="opacity-30 grayscale" />
      <img src="/images/logos/huffpost.png" alt="HuffPost" style="height: 16px; width: auto;" class="opacity-30 grayscale" />
    </div>
  </div>


  <!-- ═══════════════════════════════════════════ ABOUT (white) ═══════════════════════════════════════════ -->
  <section id="about" class="py-28 md:py-40">
    <div class="max-w-[1400px] mx-auto px-6 md:px-12">
      <div class="grid md:grid-cols-2 gap-16 md:gap-24 items-center">
        <div>
          <p class="text-[11px] uppercase tracking-[0.2em] text-accent font-semibold mb-5">About</p>
          <h2 class="text-[clamp(2rem,4vw,3rem)] font-bold leading-[1.05] tracking-[-0.03em] text-charcoal mb-6">
            HUMAN POTENTIAL<br/>EXPERT
          </h2>
          <p class="text-[16px] leading-[1.7] text-secondary mb-4">
            I have a masters in the science of thriving from Penn and studied with the father of positive psychology, Marty Seligman.
          </p>
          <p class="text-[16px] leading-[1.7] text-secondary">
            My mission: help tech companies build products and cultures that unlock human potential at scale.
          </p>
        </div>
        <div class="aspect-video w-full rounded-sm overflow-hidden shadow-lg">
          <iframe
            src="https://www.youtube.com/embed/5a5QTmgeoEs"
            title="The Science of Thriving"
            class="w-full h-full"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          ></iframe>
        </div>
      </div>
    </div>
  </section>


  <!-- ═══════════════════════════════════════════ TECH ADVISOR / HPI (full-bleed) ═══════════════════════════════════════════ -->
  <section id="work" class="flex flex-col md:block relative w-full md:min-h-[85vh] bg-white">
    <img
      src="/images/headshots/about.jpg"
      alt="Courtney Bigony"
      class="w-full h-[55vh] object-cover object-[30%_top] md:absolute md:inset-0 md:h-full md:object-[left_20%]"
    />
    <div class="relative z-10 py-12 md:py-0 md:flex md:items-center md:min-h-[85vh] md:py-24">
      <div class="w-full max-w-[1400px] mx-auto px-6 md:px-12">
        <div class="md:ml-auto max-w-[500px]">
          <p class="text-[11px] uppercase tracking-[0.2em] text-accent font-semibold mb-5">Tech Advisor</p>
          <h2 class="text-[clamp(2rem,4vw,3rem)] font-bold leading-[1.05] tracking-[-0.03em] text-charcoal mb-6">
            HUMAN POTENTIAL<br/>INDEX
          </h2>
          <p class="text-[16px] leading-[1.7] text-secondary mb-4">
            I co-invented the Human Potential Index with the world's leading expert on human thriving — a new measure that hyperfocuses on what truly allows human beings to thrive.
          </p>
          <p class="text-[16px] leading-[1.7] text-secondary mb-6">
            Backed by science. Built for tech.
          </p>
          <div class="flex flex-wrap gap-2 mb-8">
            {['Wellbeing', 'Resilience', 'Growth', 'Purpose', 'Flow', 'Relationships', 'Motivation', 'Self'].map(dim => (
              <span class="px-3 py-1.5 text-[11px] uppercase tracking-[0.1em] font-medium text-accent bg-accent-light rounded-full">{dim}</span>
            ))}
          </div>
          <a href="#contact" class="inline-flex items-center gap-2 text-[13px] font-medium text-charcoal hover:text-accent transition-colors">
            Partner With Courtney
            <svg width="14" height="14" viewBox="0 0 14 14" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M1 7h12M8 2l5 5-5 5"/></svg>
          </a>
        </div>
      </div>
    </div>
  </section>


  <!-- ═══════════════════════════════════════════ TECH INNOVATOR / PPD (white) ═══════════════════════════════════════════ -->
  <section class="py-28 md:py-40">
    <div class="max-w-[1400px] mx-auto px-6 md:px-12">

      <!-- HPI Video -->
      <div class="max-w-3xl mx-auto mb-28 md:mb-40">
        <div class="aspect-video w-full rounded-sm overflow-hidden shadow-lg">
          <iframe
            src="https://www.youtube.com/embed/xbvcjBOZx-Q"
            title="AI's Tipping Point: Harm or Human Thriving?"
            class="w-full h-full"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          ></iframe>
        </div>
      </div>

      <!-- PPD Content -->
      <div class="grid md:grid-cols-2 gap-12 md:gap-20 items-center">
        <div class="order-2 md:order-1">
          <img
            src="/images/media/ppd-guide.jpg"
            alt="Positive Product Design Guide"
            class="w-full h-auto rounded-sm"
          />
        </div>
        <div class="order-1 md:order-2">
          <p class="text-[11px] uppercase tracking-[0.2em] text-accent font-semibold mb-5">Tech Innovator</p>
          <h2 class="text-[clamp(2rem,4vw,3rem)] font-bold leading-[1.05] tracking-[-0.03em] text-charcoal mb-6">
            POSITIVE PRODUCT<br/>DESIGN
          </h2>
          <p class="text-[16px] leading-[1.7] text-secondary mb-4">
            I'm the inventor of Positive Product Design — a <a href="https://www.prweb.com/releases/positive-product-design-tm-selected-by-fast-company-as-a-2021-world-changing-idea-in-the-wellness-category-805300491.html" target="_blank" rel="noopener" class="text-accent underline hover:text-charcoal transition-colors">Fast Company World Changing Idea</a>.
          </p>
          <p class="text-[16px] leading-[1.7] text-secondary mb-8">
            My method has been leveraged by 15Five to build technology that helps people thrive at work.
          </p>
          <div class="flex items-center gap-4 mb-8">
            <img src="/images/logos/fastcompany.png" alt="Fast Company" style="height: 14px; width: auto;" class="grayscale opacity-60" />
            <span class="text-[12px] font-medium text-tertiary">2021 World Changing Idea</span>
          </div>
          <a href="https://www.dropbox.com/s/3kkg5hb486ocuff/A%20Guide%20to%20Positive%20Product%20Design%E2%84%A2.pdf?dl=0" target="_blank" rel="noopener" class="inline-flex items-center gap-2 text-[13px] font-medium text-charcoal hover:text-accent transition-colors">
            Download the Guide
            <svg width="14" height="14" viewBox="0 0 14 14" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M7 1v10M2 8l5 5 5-5"/></svg>
          </a>
        </div>
      </div>

    </div>
  </section>


  <!-- ═══════════════════════════════════════════ SPEAKING (full-bleed) ═══════════════════════════════════════════ -->
  <section id="speaking" class="flex flex-col md:block relative w-full md:min-h-[80vh] bg-white">
    <img
      src="/images/headshots/speaker.jpg"
      alt="Courtney Bigony"
      class="w-full h-[55vh] object-cover object-[70%_top] md:absolute md:inset-0 md:h-full md:object-[right_top]"
    />
    <div class="relative z-10 py-12 md:py-0 md:flex md:items-center md:min-h-[80vh] md:py-24">
      <div class="w-full max-w-[1400px] mx-auto px-6 md:px-12">
        <div class="max-w-[480px]">
          <p class="text-[11px] uppercase tracking-[0.2em] text-accent font-semibold mb-5">Speaking</p>
          <h2 class="text-[clamp(2rem,4vw,3rem)] font-bold leading-[1.05] tracking-[-0.03em] text-charcoal mb-6">
            BOOK ME<br/>TO SPEAK
          </h2>
          <p class="text-[16px] leading-[1.7] text-secondary mb-6">
            Practical frameworks, high energy, memorable stories. Available for conferences, podcasts, and media.
          </p>
          <div class="flex flex-wrap gap-2 mb-8">
            {['AI & Human Thriving', 'Positive Product Design', 'Future of Work'].map(topic => (
              <span class="px-3 py-1.5 text-[11px] uppercase tracking-[0.1em] font-medium text-accent border border-accent/30 bg-white/60 rounded-full">{topic}</span>
            ))}
          </div>
          <a href="#contact" class="inline-flex items-center gap-2 px-6 py-3 bg-charcoal text-white text-[13px] font-medium rounded-full hover:bg-charcoal/85 transition-colors">
            Book me to speak
            <svg width="14" height="14" viewBox="0 0 14 14" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M1 7h12M8 2l5 5-5 5"/></svg>
          </a>
        </div>
      </div>
    </div>
  </section>


  <!-- ═══════════════════════════════════════════ MEDIA (white, Swiper) ═══════════════════════════════════════════ -->
  <section id="media" class="py-28 md:py-40 overflow-hidden">
    <div class="max-w-[1400px] mx-auto px-6 md:px-12">
      <div class="flex items-end justify-between mb-12 md:mb-16">
        <div>
          <p class="text-[11px] uppercase tracking-[0.2em] text-accent font-semibold mb-5">Press</p>
          <h2 class="text-[clamp(2rem,4vw,3rem)] font-bold leading-[1.05] tracking-[-0.03em] text-charcoal">
            IN THE MEDIA
          </h2>
        </div>
        <div class="hidden md:flex items-center gap-3">
          <button id="media-prev" class="w-10 h-10 rounded-full border border-border flex items-center justify-center text-secondary hover:text-charcoal hover:border-charcoal transition-colors" aria-label="Previous">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M10 3L5 8l5 5"/></svg>
          </button>
          <button id="media-next" class="w-10 h-10 rounded-full border border-border flex items-center justify-center text-secondary hover:text-charcoal hover:border-charcoal transition-colors" aria-label="Next">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M6 3l5 5-5 5"/></svg>
          </button>
        </div>
      </div>
    </div>

    <div class="max-w-[1400px] mx-auto px-6 md:px-12">
      <div class="swiper media-swiper">
        <div class="swiper-wrapper">
          {[
            { source: 'Fast Company', title: '2021 World Changing Idea — Wellness Category', tag: 'Award', img: '/images/media/fastco.png', url: 'https://www.prweb.com/releases/positive-product-design-tm-selected-by-fast-company-as-a-2021-world-changing-idea-in-the-wellness-category-805300491.html' },
            { source: 'Forbes', title: 'Companies Are Letting Employees Self-Define Their Jobs', tag: 'Feature', img: '/images/media/forbes.jpg', url: 'https://www.forbes.com/sites/heidilynnekurter/2019/07/09/companies-are-letting-employees-self-define-their-jobs-and-heres-why/' },
            { source: 'Huffington Post', title: 'Silicon Valley Meets Positive Psychology', tag: 'Feature', img: '/images/media/huffpost.jpg', url: 'https://www.huffpost.com/entry/silicon-valley-meets-positive-psychology-using-science_b_5a5e671ce4b03ed177016e91' },
            { source: 'MAPP Magazine', title: 'Unlocking Human Potential at Scale', tag: 'Feature', img: '/images/media/mapp.jpg', url: 'https://www.mappmagazine.com/articles/empowering-tech-creators-to-unlock-human-potential-at-scale' },
            { source: 'Beautiful Minds', title: 'A New Way to Find Your Purpose', tag: 'Newsletter', img: '/images/media/beautiful-minds.webp', url: 'https://www.beautifulminds-newsletter.com/p/introducing-a-new-way-to-find-your' },
            { source: 'Authority Magazine', title: 'Female Disruptors: Shaking Up Your Industry', tag: 'Interview', img: '/images/media/female-disruptors.jpg', url: 'https://medium.com/authority-magazine/female-disruptors-courtney-bigony-of-15five-on-the-three-things-you-need-to-shake-up-your-industry-39f69992bb67' },
            { source: 'Make Things That Matter', title: 'Life Above Neutral with Positive Product Design', tag: 'Podcast', img: '/images/media/podcast.webp', url: 'https://podcasts.apple.com/us/podcast/43-courtney-bigony-life-above-neutral-with-positive/id1485958382?i=1000522133056' },
          ].map(item => (
            <div class="swiper-slide">
              <a href={item.url} target="_blank" rel="noopener" class="group block">
                <div class="aspect-[3/2] w-full overflow-hidden rounded-sm mb-4 bg-surface">
                  <img src={item.img} alt={item.title} class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
                </div>
                <span class="text-[10px] uppercase tracking-[0.15em] text-accent font-semibold">{item.tag}</span>
                <h3 class="text-[15px] font-medium text-charcoal mt-1.5 mb-1 group-hover:text-accent transition-colors line-clamp-2">{item.title}</h3>
                <span class="text-[13px] text-tertiary">{item.source}</span>
              </a>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>


  <!-- ═══════════════════════════════════════════ FOOTER: CONTACT + NATURE ═══════════════════════════════════════════ -->
  <footer id="footer-nature" class="relative w-full min-h-screen overflow-hidden flex flex-col">
    <img
      src="/images/nature-path.jpg"
      alt=""
      class="absolute inset-0 w-full h-full object-cover object-center"
      role="presentation"
    />
    <div class="absolute inset-0 bg-black/30"></div>

    <!-- CTA centered -->
    <div id="contact" class="relative z-10 flex-1 flex items-center justify-center px-6 md:px-12">
      <div class="text-center">
        <p class="text-[11px] uppercase tracking-[0.2em] text-accent font-semibold mb-5">Get In Touch</p>
        <h2 class="text-[clamp(2rem,4vw,3rem)] font-bold leading-[1.05] tracking-[-0.03em] text-white mb-6">
          LET'S BUILD<br/>SOMETHING<br/>MEANINGFUL
        </h2>
        <p class="text-[16px] leading-[1.7] text-white/70 mb-8">
          Tech advising, speaking, or just want to connect?
        </p>
        <a href="mailto:hello@courtneybigony.com" class="inline-flex items-center gap-2 px-8 py-3.5 bg-white text-charcoal text-[13px] font-medium rounded-full hover:bg-white/90 transition-colors mb-8">
          Get in Touch
          <svg width="14" height="14" viewBox="0 0 14 14" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M1 7h12M8 2l5 5-5 5"/></svg>
        </a>
        <div class="flex items-center justify-center gap-6">
          <a href="https://www.linkedin.com/in/courtneybigony/" target="_blank" rel="noopener" class="text-white/50 hover:text-white transition-colors" aria-label="LinkedIn">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          </a>
          <a href="https://www.instagram.com/courtneybigony/" target="_blank" rel="noopener" class="text-white/50 hover:text-white transition-colors" aria-label="Instagram">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/></svg>
          </a>
          <a href="https://www.youtube.com/@courtneybigony" target="_blank" rel="noopener" class="text-white/50 hover:text-white transition-colors" aria-label="YouTube">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M23.498 6.186a3.016 3.016 0 00-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 00.502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 002.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 002.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
          </a>
        </div>
      </div>
    </div>

    <!-- Footer bar at bottom -->
    <div class="relative z-10 py-10">
      <div class="max-w-[1400px] mx-auto px-6 md:px-12 flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="text-[12px] text-white/40">&copy; 2026 Courtney Bigony &middot; San Francisco, CA</p>
        <div class="flex items-center gap-6">
          <a href="#about" class="text-[12px] text-white/40 hover:text-white transition-colors">About</a>
          <a href="#work" class="text-[12px] text-white/40 hover:text-white transition-colors">Advising</a>
